@{
}

@model List<RegistroDeTickets.Entidades.TicketEntity> 

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease-out;
    }

        .header h1 {
            color: #e2dac4;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .header p {
            color: #c7bca3;
            font-size: 1.1rem;
        }

    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        animation: fadeIn 0.8s ease-out;
    }

    .stat-card {
        background: linear-gradient(135deg, #6a625c 0%, #5b534d 100%);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        }

        .stat-card h3 {
            color: #c7bca3;
            font-size: 0.9rem;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .stat-card p {
            color: #e2dac4;
            font-size: 2rem;
            font-weight: 700;
        }

    .search-container {
        margin-bottom: 20px;
        animation: fadeIn 1s ease-out;
    }

    .search-box {
        width: 100%;
        padding: 15px 20px;
        background-color: #3f3a35;
        border: 2px solid #6a625c;
        border-radius: 10px;
        color: #e2dac4;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .search-box:focus {
            outline: none;
            border-color: #c7bca3;
            box-shadow: 0 0 15px rgba(199, 188, 163, 0.3);
        }

        .search-box::placeholder {
            color: #8a8076;
        }

    .table-container {
        background-color: #5b534d;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        overflow-x: auto;
        animation: fadeInUp 1s ease-out;
    }

    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        color: #e2dac4;
    }

        .table thead {
            background: linear-gradient(135deg, #3f3a35 0%, #2f2a25 100%);
        }

            .table thead th {
                color: #e2dac4;
                font-weight: 600;
                text-transform: uppercase;
                padding: 16px 12px;
                text-align: left;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
                position: sticky;
                top: 0;
                z-index: 10;
                background: #6a625c;
            }

                .table thead th:first-child {
                    border-top-left-radius: 10px;
                    padding-left: 20px;
                }

                .table thead th:last-child {
                    border-top-right-radius: 10px;
                    padding-right: 20px;
                }

        .table tbody tr {
            background-color: #6a625c;
            transition: all 0.3s ease;
            border-bottom: 2px solid #5b534d;
        background: #6a625c;
        }

            .table tbody tr:hover {
                background-color: #7d746d;
                transform: scale(1.005);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            }

            .table tbody tr:last-child {
                border-bottom: none;
            }

        .table td {
            padding: 16px 12px;
            vertical-align: middle;
            background: #6a625c;
            color: #e2dac4;
        }

            .table td:first-child {
                padding-left: 20px;
                font-weight: 700;
                color: #c7bca3;
            }

            .table td:last-child {
                padding-right: 20px;
            }

    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-incidente {
        background-color: #d32f2f;
        color: white;
    }

    .badge-solicitud {
        background-color: #1976d2;
        color: white;
    }

    .badge-consulta {
        background-color: #388e3c;
        color: white;
    }

    .ticket-id {
        font-family: 'Courier New', monospace;
        background-color: #3f3a35;
        padding: 4px 8px;
        border-radius: 4px;
        font-weight: 600;
    }

    .no-results {
        text-align: center;
        padding: 40px;
        color: #c7bca3;
        font-size: 1.2rem;
    }
</style>

<div class="container"> 
    <div class="header">
        <h1>📋 Tickets Registrados 📋</h1>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Nro</th>
                    <th>Motivo</th>
                    <th>Tipo</th>
                    <th>Descripción</th>
                    <th>Fecha de Emisión</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody id="ticketsTableBody">
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.Id</td>
                        <td>@ticket.Motivo</td>
                        <td>@ticket.Tipo</td>
                        <td>@ticket.Descripcion</td>
                        <td>@ticket.FechaCreacion.ToString("g")</td>
                        <td><a class="btn btn-danger" asp-controller="Ticket" asp-action="Eliminar" asp-route-id="@ticket.Id">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="noResults" class="no-results" style="display: none;">
            No se encontraron tickets que coincidan con tu búsqueda
        </div>
    </div>
</div>