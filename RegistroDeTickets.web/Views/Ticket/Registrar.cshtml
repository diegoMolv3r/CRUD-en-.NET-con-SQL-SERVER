@{
    ViewData["Title"] = "Registrar";
}

@model RegistroDeTickets.web.Models.TicketViewModel

<style>
    .ticket-form {
        background-color: #5b534d;
        padding: 30px 40px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 450px;
    }

    .ticket-form label {
        font-weight: 500;
        color: #e2dac4;
    }

    .form-control {
        background-color: #e2dac4;
        color: #48423d;
        border: none;
        border-radius: 8px;
        padding: 10px 12px;
        transition: all 0.3s ease;
        margin-bottom: 15px;
    }

    .form-control:focus {
        background-color: #fff;
        box-shadow: 0 0 0 3px rgba(226, 218, 196, 0.5);
        outline: none;
    }

    textarea.form-control {
        resize: none;
        min-height: 100px;
    }

    .btn-primary {
        background-color: #c7bca3;
        border: none;
        color: #48423d;
        font-weight: 600;
        padding: 10px 18px;
        border-radius: 8px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #e2dac4;
        color: #2f2b28;
    }

    .text-danger {
        color: #ffb3b3 !important;
        font-size: 0.9em;
    }

    h2 {
        text-align: center;
        color: #e2dac4;
        margin-bottom: 25px;
    }
</style>

<div class="ticket-form">
    <h2>Registrar Ticket de Queja</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="Motivo">Motivo</label>
            <input asp-for="Motivo" class="form-control" />
            <span asp-validation-for="Motivo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tipo">Tipo</label>
            <select asp-for="Tipo" class="form-control">
                <option value="">Seleccione un tipo</option>
                <option value="Baja">Baja</option>
                <option value="Media">Media</option>
                <option value="Alta">Alta</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Registrar Ticket</button>
    </form>
</div>