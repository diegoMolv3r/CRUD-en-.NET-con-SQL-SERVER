@{
    Layout = "/Views/Shared/_TecnicoLayout.cshtml";
}
@model RegistroDeTickets.web.Models.ReporteViewModel

<div class="contenedor">

    <div class="ticket">
        <h2>Ticket</h2>
        <p><strong>Cliente:</strong> @ViewBag.Ticket.IdCliente</p>
        <p><strong>Estado:</strong> Abierto</p>
        <p><strong>Prioridad:</strong> @ViewBag.Ticket.PrioridadId</p>
    
        @foreach (var reporte in ViewBag.Ticket.ReporteTecnicos)
        {
            <p>
                <strong>Reporte:</strong>
                @reporte.Descripcion
            </p>
        }
    

        <form asp-action="GenerarReporte" method="post">
            <input id="IdTicket" type="hidden" name="idTicket" value="@ViewBag.Ticket.Id">

            <label for="descripcion"><strong>Nuevo reporte:</strong></label><br>
            <textarea id="descripcion" name="descripcion" rows="4" cols="40" style="margin-top: 8px; margin-bottom: 12px;"></textarea><br>
            <span asp-validation-for="Descripcion" class="text-danger"></span>

            <button type="submit" style="background-color: #198754; color: white; border: none; padding: 10px 16px; border-radius: 4px; cursor: pointer;">
                Generar  nuevo reporte
            </button>
        </form>
    </div>
</div>
